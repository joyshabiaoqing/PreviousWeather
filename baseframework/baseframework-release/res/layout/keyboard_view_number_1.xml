<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_keyboardview_1"
                style="@style/keyboard_button_1"
                android:text="1" />

            <Button
                android:id="@+id/btn_keyboardview_2"
                style="@style/keyboard_button_1"
                android:text="2" />

            <Button
                android:id="@+id/btn_keyboardview_3"
                style="@style/keyboard_button_1"
                android:text="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_keyboardview_4"
                style="@style/keyboard_button_1"
                android:text="4" />

            <Button
                android:id="@+id/btn_keyboardview_5"
                style="@style/keyboard_button_1"
                android:text="5" />

            <Button
                android:id="@+id/btn_keyboardview_6"
                style="@style/keyboard_button_1"
                android:text="6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_keyboardview_7"
                style="@style/keyboard_button_1"
                android:text="7" />

            <Button
                android:id="@+id/btn_keyboardview_8"
                style="@style/keyboard_button_1"
                android:text="8" />

            <Button
                android:id="@+id/btn_keyboardview_9"
                style="@style/keyboard_button_1"
                android:text="9" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_keyboardview_0"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/dp_3"
            android:layout_weight="1"
            android:background="@drawable/selector_button_keyboard_corners_0"
            android:gravity="center"
            android:text="0"
            android:textColor="@drawable/selector_textcolor_keyboard_corners_0"
            android:textSize="29sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_keyboardview_enter"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/dp_3"
            android:layout_weight="2"
            android:background="@drawable/selector_button_keyboard_corners_enter"
            android:gravity="center"
            android:text="Enter"
            android:textColor="@color/white"
            android:textSize="29sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_keyboardview_back"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/dp_3"
            android:layout_weight="1"
            android:background="@drawable/selector_button_keyboard_corners_back"
            android:gravity="center"
            android:text=" ← "
            android:textAlignment="center"
            android:textColor="@drawable/selector_textcolor_keyboard_corners_back"
            android:textSize="39sp" />

        <Button
            android:id="@+id/btn_keyboardview_reset"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/dp_3"
            android:layout_weight="1"
            android:background="@drawable/selector_button_keyboard_corners_reset"
            android:gravity="center"
            android:text="重    置"
            android:textColor="@drawable/selector_textcolor_keyboard_corners_reset"
            android:textSize="29sp"
            android:textStyle="bold" />

    </LinearLayout>

